@model Technician
@{
    ViewData["Title"] = "Delete Technician";
}

<h2>Delete Technician</h2>

<p>Are you sure you want to delete technician: @Model.Name?</p>

<form asp-controller="Technicians" asp-action="Delete" method="post">
    <input type="hidden" asp-for="TechnicianID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Technicians" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>