@model List<Product>

<h1>Product Manager</h1>

<p>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Yearly Price</th>
            <th>Release Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductCode</td>
                <td>@product.Name</td>
                <td>@product.YearlyPrice</td>
                <td>@product.ReleaseDate.ToShortDateString()</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductID">Edit</a> |
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
</p>